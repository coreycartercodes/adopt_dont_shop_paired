
<main>
<h1><%= @shelter.name %></h1>

<p>Address: <%= @shelter.address %></p>
<p>City: <%= @shelter.city %></p>
<p>State: <%= @shelter.state %></p>
<p>Zip: <%= @shelter.zip %></p>
<a href="/shelters/<%= @shelter.id %>/pets">View Pets</a>
<a href="/shelters/<%= @shelter.id %>/edit">Update Shelter</a>
<a href="/shelters/<%= @shelter.id %>/delete">Delete Shelter</a>
<br>
<br>
<section>
<h1>Reviews</h1>
<br>
<br>
<% @shelter.reviews.each do |review| %>
  <h2>Title: <%= review.title %></h2>
  <h3>Rating: <%= review.rating %></h3>
  <h3>Content:</h3><p><%= review.content %></p>
  <img src="<%= review.image %>">
  <br>
  <a href="/shelters/<%= @shelter.id %>/<%= review.id %>/edit">Update Review</a>
  <a href="/shelters/<%= @shelter.id %>/<%= review.id %>/delete">Delete Review</a>
  <br>
<% end %>
<a href="/shelters/<%= @shelter.id %>/review">Add Review</a>
</section>
</main>
