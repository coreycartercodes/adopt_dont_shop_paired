<header>
  <h1 style="display: inline; height: 100%; float: left">
    <a href="/shelters">Shelters Index</a>
  </h1>
  <h1 style="display: inline; height: 100%; float: right; text-align: right">
    <a href="/pets">Pets Index</a>
  </h1>
</header>
<main>
<h1><%= @pet.name %></h1>

  <img class="pet-image" src="<%= @pet.image %>" width="200px">
  <h3>Name: <%= @pet.name %></h3>
  <h3>Description: <%= @pet.description %></h3>
  <h3>Approximate Age: <%= @pet.age %></h3>
  <h3>Sex: <%= @pet.sex %></h3>
  <h3>Adoption Status: <%= @pet.adoption_status %></h3>

  <a href="/pets/<%= @pet.id %>/edit">Update Pet</a>
  <a href="/pets/<%= @pet.id %>/delete">Delete Pet</a>
</main>
