
<main>

    <% flash.each do |type, message| %>
      <p style="color: red"><%= message %></p>
    <% end %>

  <%= form_tag "/shelters/#{@shelter.id}" do %>
  <%= label_tag :title %><br>
  <%= text_field_tag :title %><br>
  <%= label_tag :rating %><br>
  <%= text_field_tag :rating %><br>
  <%= label_tag :content %><br>
  <%= text_field_tag :content %><br>
  <%= label_tag :image %><br>
  <%= text_field_tag :image %><br>
  <%= submit_tag 'Add Review' %>
<% end %>
</main>
